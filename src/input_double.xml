<simulation verbosity="medium">
   <ffsocket mode='unix' name='driver'>
      <latency>  1.00000000e-02</latency>
      <slots>4</slots>
      <port>20614</port>
      <timeout>  6.00000000e+02</timeout>
      <address>dftb-zundel</address>
   </ffsocket>
   <ffsocket mode='unix' name='ddmc'>
     <latency>  1.00000000e-02</latency>
     <slots>4</slots>
     <port>20614</port>
     <timeout>  6.00000000e+02</timeout>
     <address>ddmc-zundel</address>
   </ffsocket>
   <total_steps>40000</total_steps>
   <output prefix="data">
      <trajectory stride="2" filename="pos" cell_units="angstrom">positions{angstrom}</trajectory>
      <trajectory stride="2" filename="xc" format="xyz">x_centroid{angstrom}</trajectory>
      <!-- <trajectory stride="2" filename="bias" format="xyz">f_bias</trajectory> -->
      <properties stride="2"> [ step, time, conserved, temperature{kelvin}, kinetic_cv, potential, bias_potential, ensemble_logweight ] </properties>
      <properties stride="2" filename="bias"> [ step, time, bias_potential, ensemble_logweight ] </properties>
   </output>
   <prng>
      <seed>18885</seed>
   </prng>
   <system>
<!--      <bias><force>bias</force></bias> -->
     <forces> 
       <force name="driver" >driver</force> 
<!--  name="ddmc" may be meaningless       -->
       <force name="ddmc" >ddmc</force>  
     </forces>
     <!-- <forces> <force name="driver" weight=".5" >driver</force> <force weight=".5">bias</force> </forces> -->
     <!-- <forces> <force name="driver">bias</force></forces> -->
      <initialize nbeads="1">
        <file mode="xyz" units="angstrom">./zundel.xyz</file>
        <cell>
         [   100.29166, 0, 0, 0, 100.29166, 0, 0, 0, 100.29166 ]
        </cell>
      </initialize>
      <ensemble mode='nvt'>
         <timestep units="femtosecond"> 0.25 </timestep>
         <thermostat mode='langevin'>
            <tau units="femtosecond">100</tau>
         </thermostat>
         <temperature units="kelvin"> 300.0 </temperature>
      </ensemble>
  </system>
</simulation>